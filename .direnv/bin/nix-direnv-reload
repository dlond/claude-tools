#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/dlond/dev/worktrees/claude-tools/feat-claude-ls-ocaml-9" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/dlond/dev/worktrees/claude-tools/feat-claude-ls-ocaml-9")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/dlond/dev/worktrees/claude-tools/feat-claude-ls-ocaml-9" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/dlond/dev/worktrees/claude-tools/feat-claude-ls-ocaml-9/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/dlond/dev/worktrees/claude-tools/feat-claude-ls-ocaml-9/.envrc" "/Users/dlond/dev/worktrees/claude-tools/feat-claude-ls-ocaml-9/.direnv"/*.rc
